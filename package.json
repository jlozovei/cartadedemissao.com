  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "cp ./CNAME ./build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier \"./src/**/*.js\" --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/cartadedemissao.com.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jlozovei/cartadedemissao.com/issues"
  },
  "homepage": "https://cartadedemissao.com",
  "devDependencies": {
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "mutationobserver-shim": "^0.3.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
    "react-hook-form": "^5.6.3",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run format"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
